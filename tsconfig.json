{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6", // Specify the target JavaScript version (e.g., 'ES5', 'ES6', 'ES2020', etc.).
    "module": "es6", // Specify the module code generation method (e.g., 'CommonJS', 'ESNext', etc.).
    "strict": false, // Enable all strict type-checking options.

    /* Module Resolution Options */
    "moduleResolution": "node", // Use Node.js-style module resolution.
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules.
    "baseUrl": "./", // Specify the base directory for module resolution.
    "paths": {
      // Set up path aliases for module imports.
      "@components/*": ["src/components/*"]
    },

    /* JSX */
    "jsx": "react-jsx", // Specify JSX behavior ('react', 'react-jsx', etc.).

    /* Output Options */
    "outDir": "./dist", // Specify the directory for compiled output.
    "rootDir": "./src", // Specify the root directory of the input files.

    /* Source Maps */
    "sourceMap": true, // Enable generation of source map files.

    /* Type Checking */
    "skipLibCheck": true, // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in import paths.

    /* Additional Options */
    // Add or remove based on your needs.
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Specify which files to include in the compilation.
  "exclude": ["node_modules", "dist"] // Specify which files or folders to exclude from compilation.
}
